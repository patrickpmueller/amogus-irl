{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "public/",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["public/src/**/*.ts", "public/src/**/*.js"],
  "exclude": ["node_modules"]
}
